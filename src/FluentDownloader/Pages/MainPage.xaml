<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentDownloader.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:FluentDownloader.Controls"
    xmlns:converters="using:FluentDownloader.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:FluentDownloader.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:CommunityToolkit.WinUI.Controls"
    xmlns:vm="using:FluentDownloader.Models"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:LanguageBasedVerticalAlignmentConverter x:Key="LangAlignmentConverter" />

        <Storyboard x:Key="FadeOutNotifications">
            <DoubleAnimation
                Storyboard.TargetName="NotificationStack"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseIn" Exponent="3" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!--  Появление уведомлений (fade-in)  -->
        <Storyboard x:Key="FadeInNotifications">
            <DoubleAnimation
                Storyboard.TargetName="NotificationStack"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="3" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!--  Выезд очереди справа налево (slide-in)  -->
        <Storyboard x:Key="SlideInQueue">
            <DoubleAnimation
                Storyboard.TargetName="QueueTranslate"
                Storyboard.TargetProperty="X"
                From="{Binding ActualWidth, ElementName=DownloadQueue}"
                To="0"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseIn" Exponent="2.5" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!--  Скрытие очереди слева направо (slide-out)  -->
        <Storyboard x:Key="SlideOutQueue">
            <DoubleAnimation
                Storyboard.TargetName="QueueTranslate"
                Storyboard.TargetProperty="X"
                From="0"
                To="{Binding ActualWidth, ElementName=DownloadQueue}"
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="7.5" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>
    <Grid x:Name="RootThemeElement">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                x:Name="RootContentGrid"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="10,0,10,0"
                RowSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <!--<ColumnDefinition Width="*" />-->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    x:Name="LeftSidebar"
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Spacing="10">

                    <HyperlinkButton
                        x:Name="FfmpegInfoButton"
                        x:Uid="/LeftSideBar/FfmpegInfoButton"
                        Click="FfmpegInfoButton_Click"
                        IsEnabled="False"
                        Style="{StaticResource Round16pxFontHyperLink}">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon
                                Height="25"
                                Margin="0"
                                VerticalAlignment="Center"
                                Glyph="&#xE946;" />
                            <Viewbox
                                Grid.Column="1"
                                Height="20"
                                Stretch="Uniform">
                                <TextBlock
                                    x:Uid="/LeftSideBar/FfmpegInfoButtonText"
                                    Margin="0"
                                    Padding="0"
                                    VerticalAlignment="Center" />
                            </Viewbox>
                        </StackPanel>
                    </HyperlinkButton>

                    <!--  yt-dlp Info Button  -->
                    <HyperlinkButton
                        x:Name="YtDlpInfoButton"
                        x:Uid="/LeftSideBar/YtDlpInfoButton"
                        Click="YtDlpInfoButton_Click"
                        IsEnabled="False"
                        Style="{StaticResource Round16pxFontHyperLink}">
                        <Grid ColumnSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Height="25"
                                Margin="0"
                                VerticalAlignment="Center"
                                Glyph="&#xE946;" />
                            <Viewbox
                                Grid.Column="1"
                                Height="20"
                                Stretch="Uniform">
                                <TextBlock
                                    x:Uid="/LeftSideBar/YtDlpInfoButtonText"
                                    Margin="0"
                                    Padding="0"
                                    VerticalAlignment="Center" />
                            </Viewbox>

                        </Grid>
                    </HyperlinkButton>

                    <!--  GitHub Link  -->
                    <!--<HyperlinkButton x:Uid="/LeftSideBar/ProjectGitHubLink" Style="{StaticResource Round16pxFontHyperLink}" />-->

                    <Button MinWidth="150" HorizontalAlignment="Stretch">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon
                                    VerticalAlignment="Center"
                                    Data="{StaticResource GitHubIcon}"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                                <TextBlock
                                    x:Uid="/LeftSideBar/ProjectGitHubLinkText"
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                            </StackPanel>
                        </Button.Content>
                        <interactivity:Interaction.Behaviors>
                            <interactivity:EventTriggerBehavior EventName="Click">
                                <behaviors:NavigateToUriAction x:Uid="/LeftSideBar/ProjectGitHubLink" />
                            </interactivity:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </Button>

                    <!--<controls:LanguageSelectorControl AutoRestartOnLanguageChange="False" />-->

                    <SplitButton MinWidth="150" Command="{Binding DownloadQueueViewModel.ToggleQueueCommand}">
                        <SplitButton.Content>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Path
                                    Width="16"
                                    Height="16"
                                    Margin="0,3,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="M640-160q-50 0-85-35t-35-85q0-50 35-85t85-35q11 0 21 1.5t19 6.5v-328h200v80H760v360q0 50-35 85t-85 35ZM120-320v-80h320v80H120Zm0-160v-80h480v80H120Zm0-160v-80h480v80H120Z"
                                    Fill="{ThemeResource TextFillColorPrimaryBrush}"
                                    Stretch="Uniform" />

                                <TextBlock
                                    x:Uid="/LeftSideBar/DownloadQueue"
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

                                <InfoBadge Value="10" />
                            </StackPanel>
                        </SplitButton.Content>
                        <SplitButton.Flyout>
                            <Flyout>
                                <Flyout.FlyoutPresenterStyle>
                                    <Style TargetType="FlyoutPresenter">
                                        <!--  фон  -->
                                        <Setter Property="Background" Value="{ThemeResource SolidBackgroundFillColorQuarternaryBrush}" />
                                        <!--  граница  -->
                                        <Setter Property="BorderBrush" Value="{ThemeResource ControlElevationBorderBrush}" />
                                        <Setter Property="BorderThickness" Value="1" />
                                        <!--  скругление углов  -->
                                        <Setter Property="CornerRadius" Value="4" />
                                    </Style>
                                </Flyout.FlyoutPresenterStyle>

                                <Flyout.Content>
                                    <StackPanel Spacing="6">
                                        <StackPanel.Resources>
                                            <!--  стиль для всех Button внутри StackPanel  -->
                                            <Style BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                                                <!--  растягиваем кнопку по ширине  -->
                                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                <!--  содержимое по левому краю  -->
                                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                                <!--  внутренние отступы  -->
                                                <Setter Property="Padding" Value="12,4" />
                                            </Style>
                                        </StackPanel.Resources>

                                        <!--  управление очередью  -->
                                        <Button>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,4,0"
                                                    Data="{StaticResource PlayIcon}"
                                                    Fill="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    x:Uid="/LeftSideBar/DownloadQueueStart"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                                            </StackPanel>
                                        </Button>

                                        <Button>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,4,0"
                                                    Data="{StaticResource ResumeIcon}"
                                                    Fill="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    x:Uid="/LeftSideBar/DownloadQueueResume"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                                            </StackPanel>
                                        </Button>

                                        <MenuFlyoutSeparator Margin="0,4" />

                                        <!--  пропуск и отмена  -->
                                        <Button>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,4,0"
                                                    Data="{StaticResource SkipIcon}"
                                                    Fill="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    x:Uid="/LeftSideBar/DownloadQueueSkip"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                                            </StackPanel>
                                        </Button>

                                        <Button>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,4,0"
                                                    Data="{StaticResource StopIcon}"
                                                    Fill="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    x:Uid="/LeftSideBar/DownloadQueueCancel"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                                            </StackPanel>
                                        </Button>

                                        <MenuFlyoutSeparator Margin="0,4" />

                                        <!--  очистка очереди  -->
                                        <Button>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,4,0"
                                                    Data="{StaticResource ClearAllIcon}"
                                                    Fill="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    x:Uid="/LeftSideBar/DownloadQueueClear"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                                            </StackPanel>
                                        </Button>

                                        <Button>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,4,0"
                                                    Data="{StaticResource SweepIcon}"
                                                    Fill="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    x:Uid="/LeftSideBar/DownloadQueueClearSucceded"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                                            </StackPanel>
                                        </Button>

                                        <MenuFlyoutSeparator Margin="0,4" />

                                        <!--  повторная попытка ошибок  -->
                                        <Button>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Path
                                                    Width="16"
                                                    Height="16"
                                                    Margin="0,0,4,0"
                                                    Data="{StaticResource RefreshIcon}"
                                                    Fill="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Stretch="Uniform" />
                                                <TextBlock
                                                    x:Uid="/LeftSideBar/DownloadQueueRetryFailed"
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                                            </StackPanel>
                                        </Button>

                                    </StackPanel>
                                </Flyout.Content>
                            </Flyout>

                        </SplitButton.Flyout>
                    </SplitButton>

                    <Button
                        x:Name="GoToSettingsPageButton"
                        HorizontalAlignment="Stretch"
                        Click="GoToSettingsPageButton_Click"
                        Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon
                                Margin="0"
                                VerticalAlignment="Center"
                                Glyph="&#xE713;" />
                            <TextBlock
                                x:Uid="/Settings/SettingsButtonTextBlock"
                                Margin="0"
                                Padding="0"
                                VerticalAlignment="Center"
                                FontSize="14" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <TextBlock
                    x:Name="Header"
                    x:Uid="Header"
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,-15,0,0"
                    HorizontalAlignment="Center"
                    Style="{StaticResource TitleLargeTextBlockStyle}" />

                <ScrollViewer
                    x:Name="RootScrollViewer"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Stretch"
                    VerticalScrollBarVisibility="Auto"
                    VerticalScrollMode="Enabled">
                    <!--<ScrollViewer.ChildrenTransitions>
                        <EntranceThemeTransition FromVerticalOffset="50" />
                        <RepositionThemeTransition IsStaggeringEnabled="False" />
                    </ScrollViewer.ChildrenTransitions>-->
                    <Grid x:Name="RootGrid" Padding="20,0,20,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <!--  Header  -->
                        <StackPanel
                            x:Name="ThumbnailImage"
                            Grid.Row="0"
                            Spacing="10"
                            Visibility="Collapsed">
                            <StackPanel.RenderTransform>
                                <TranslateTransform x:Name="ThumbnailTransform" Y="-200" />
                            </StackPanel.RenderTransform>
                            <StackPanel.Resources>
                                <Storyboard x:Name="ThumbnailAnimation">
                                    <DoubleAnimation
                                        EnableDependentAnimation="True"
                                        Storyboard.TargetName="ThumbnailTransform"
                                        Storyboard.TargetProperty="Y"
                                        From="-200"
                                        To="0"
                                        Duration="0:0:0.25" />
                                    <DoubleAnimation
                                        Storyboard.TargetName="ThumbnailImage"
                                        Storyboard.TargetProperty="Opacity"
                                        From="0"
                                        To="1"
                                        Duration="0:0:0.1" />
                                </Storyboard>
                            </StackPanel.Resources>
                            <Border
                                MaxWidth="320"
                                MaxHeight="180"
                                CornerRadius="8">
                                <Image
                                    ImageFailed="ThumbnailImage_OnImageFailed"
                                    ImageOpened="ThumbnailImage_OnImageOpened"
                                    Source="{Binding ThumbnailUri}"
                                    Stretch="Uniform" />
                            </Border>
                            <TextBlock
                                Padding="0,0,0,20"
                                HorizontalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{Binding Title}"
                                TextTrimming="CharacterEllipsis" />
                            <StackPanel.Transitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition />
                                </TransitionCollection>
                            </StackPanel.Transitions>
                        </StackPanel>

                        <!--  Main Layout  -->
                        <Grid
                            x:Name="MainLayout"
                            Grid.Row="1"
                            VerticalAlignment="Top"
                            RowSpacing="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Uid="VideoUrlLabel"
                                Grid.Row="0"
                                Grid.Column="0"
                                MaxWidth="600"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center" />

                            <TextBox
                                x:Name="UrlTextBox"
                                x:Uid="UrlTextBox"
                                Grid.Row="0"
                                Grid.Column="1"
                                Height="45"
                                Padding="10,10,40,10"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" />
                            <TeachingTip x:Name="UrlTextBoxTeachingTip" Target="{x:Bind UrlTextBox}">
                                <TeachingTip.IconSource>
                                    <SymbolIconSource Symbol="Globe" />
                                </TeachingTip.IconSource>
                            </TeachingTip>
                            <Button
                                x:Name="OpenEditUrlButton"
                                x:Uid="OpenEditUrlButton"
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Click="OpenEditUrlDialog_Click"
                                FontSize="16"
                                Style="{StaticResource ButtonRevealStyle}" />

                            <ContentDialog
                                x:Name="EditTextDialog"
                                x:Uid="EditTextDialog"
                                Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                                DefaultButton="Primary"
                                PrimaryButtonClick="EditTextDialog_PrimaryButtonClick">
                                <StackPanel>
                                    <TextBox
                                        x:Name="EditTextBox"
                                        Width="500"
                                        Height="200"
                                        Loaded="EditTextBox_Loaded"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </ContentDialog>

                            <!--  Format TextBlock  -->
                            <TextBlock
                                x:Uid="FormatTextBlock"
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center" />

                            <!--  Format Grid  -->
                            <RelativePanel
                                x:Name="FormatGrid"
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="2">
                                <RelativePanel.ChildrenTransitions>
                                    <EntranceThemeTransition FromVerticalOffset="50" />
                                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                                </RelativePanel.ChildrenTransitions>
                                <!--  FormatComboBox  -->
                                <ComboBox
                                    x:Name="FormatComboBox"
                                    x:Uid="FormatComboBox"
                                    Grid.Column="0"
                                    Width="200"
                                    AllowFocusWhenDisabled="False"
                                    IsEnabled="False">
                                    <ComboBoxItem x:Uid="FormatComboBoxItem1" />
                                    <ComboBoxItem x:Uid="FormatComboBoxItem2" />
                                    <ComboBoxItem x:Uid="FormatComboBoxItem3" />
                                </ComboBox>
                                <!--  FormatTeachingTip  -->
                                <TeachingTip
                                    x:Name="FormatTeachingTip"
                                    x:Uid="FormatTeachingTip"
                                    IsOpen="False"
                                    PreferredPlacement="Top"
                                    Target="{x:Bind FormatComboBox}" />

                                <!--  VideoFormatComboBox  -->
                                <ComboBox
                                    x:Name="VideoFormatComboBox"
                                    x:Uid="VideoFormatComboBox"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    AllowFocusWhenDisabled="False"
                                    IsEnabled="False"
                                    RelativePanel.RightOf="FormatComboBox" />

                                <!--  AudioFormatComboBox  -->
                                <ComboBox
                                    x:Name="AudioFormatComboBox"
                                    x:Uid="AudioFormatComboBox"
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Center"
                                    AllowFocusWhenDisabled="False"
                                    IsEnabled="False"
                                    RelativePanel.RightOf="VideoFormatComboBox" />

                                <!--  RecodeVideFormatComboBox  -->
                                <ComboBox
                                    x:Name="RecodeVideFormatComboBox"
                                    x:Uid="RecodeVideFormatComboBox"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Right"
                                    AllowFocusWhenDisabled="False"
                                    IsEnabled="False"
                                    RelativePanel.AlignTopWith="AudioFormatComboBox"
                                    RelativePanel.RightOf="AudioFormatComboBox" />
                            </RelativePanel>

                            <!--  Save to label  -->
                            <TextBlock
                                x:Uid="SaveToLabel"
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center" />

                            <TextBox
                                x:Name="SavePathTextBox"
                                x:Uid="SavePathTextBox"
                                Grid.Row="2"
                                Grid.Column="1"
                                Height="45"
                                Padding="10,10,40,10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                AllowFocusWhenDisabled="False"
                                IsEnabled="False"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto" />

                            <TeachingTip
                                x:Name="SavePathTeachingTip"
                                x:Uid="SavePathTeachingTip"
                                Target="{x:Bind SavePathTextBox}">
                                <TeachingTip.IconSource>
                                    <SymbolIconSource Symbol="Folder" />
                                </TeachingTip.IconSource>
                            </TeachingTip>

                            <Button
                                x:Name="SavePathButton"
                                x:Uid="SavePathButton"
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                AllowFocusWhenDisabled="False"
                                Click="SavePathButton_Click"
                                IsEnabled="False"
                                Style="{StaticResource ButtonRevealStyle}">
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,5,0"
                                        VerticalAlignment="Center"
                                        Glyph="&#xE838;" />
                                    <Viewbox
                                        Height="20"
                                        VerticalAlignment="Center"
                                        Stretch="Uniform">
                                        <TextBlock x:Uid="SavePathButtonTextBlock" />
                                    </Viewbox>
                                </StackPanel>
                            </Button>

                            <!--  Download Button  -->
                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Height="40"
                                Orientation="Horizontal"
                                Spacing="20">
                                <Button
                                    x:Name="DownloadButton"
                                    x:Uid="DownloadButton"
                                    Width="180"
                                    VerticalAlignment="Stretch"
                                    Click="DownloadButton_Click"
                                    IsEnabled="False"
                                    Style="{StaticResource AccentButtonStyle}">
                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                        <ProgressRing
                                            x:Name="DownloadButtonProgressRing"
                                            Width="25"
                                            Height="25"
                                            Foreground="AliceBlue"
                                            IsActive="True"
                                            Visibility="Collapsed" />
                                        <Viewbox
                                            Height="20"
                                            VerticalAlignment="Center"
                                            Stretch="Uniform">
                                            <TextBlock
                                                x:Name="DownloadButtonGetFormatsTextBlock"
                                                x:Uid="DownloadButtonGetFormatsTextBlock"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="SemiBold" />
                                        </Viewbox>
                                        <Viewbox
                                            Height="20"
                                            VerticalAlignment="Center"
                                            Stretch="Uniform">
                                            <TextBlock
                                                x:Name="DownloadButtonDownloadTextBlock"
                                                x:Uid="DownloadButtonDownloadTextBlock"
                                                FontWeight="SemiBold"
                                                Visibility="Collapsed" />
                                        </Viewbox>
                                        <StackPanel
                                            x:Name="DownloadButtonCancelPanel"
                                            x:Uid="DownloadButtonCancelPanel"
                                            Height="25"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal"
                                            Spacing="5"
                                            Visibility="Collapsed">
                                            <FontIcon
                                                VerticalAlignment="Stretch"
                                                FontWeight="SemiBold"
                                                Glyph="&#xF78A;" />
                                            <Viewbox
                                                Height="20"
                                                VerticalAlignment="Center"
                                                Stretch="Uniform">
                                                <TextBlock
                                                    x:Uid="DownloadButtonCancelPanelTextBlock"
                                                    VerticalAlignment="Stretch"
                                                    FontWeight="SemiBold" />
                                            </Viewbox>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="ResetDownloadFieldsButton"
                                    x:Uid="ResetDownloadFieldsButton"
                                    VerticalAlignment="Stretch"
                                    Click="ResetDownloadFieldsButton_Click"
                                    Style="{StaticResource AccentButtonStyle}">
                                    <StackPanel
                                        Height="25"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="10">
                                        <FontIcon FontWeight="SemiBold" Glyph="&#xE72C;" />
                                        <Viewbox
                                            Height="20"
                                            VerticalAlignment="Center"
                                            Stretch="Uniform">
                                            <TextBlock x:Uid="ResetDownloadFieldsButtonText" FontWeight="SemiBold" />
                                        </Viewbox>
                                    </StackPanel>
                                </Button>
                                <TextBlock />
                            </StackPanel>

                            <!--  Dowload logs  -->

                            <Expander
                                x:Name="LogsBlockExpander"
                                Grid.Row="4"
                                Grid.ColumnSpan="3"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                ExpandDirection="Down"
                                IsExpanded="False">
                                <Expander.Header>
                                    <StackPanel Spacing="5">
                                        <TextBlock x:Uid="LogsBlockHeader" />
                                        <ProgressBar
                                            x:Name="DownloadingProgressBar"
                                            Maximum="100"
                                            Minimum="0"
                                            Value="0" />
                                    </StackPanel>
                                </Expander.Header>
                                <StackPanel HorizontalAlignment="Stretch">
                                    <!--  Dowload logs output  -->
                                    <ScrollViewer
                                        x:Name="LogsScrollViewer"
                                        Height="500"
                                        HorizontalAlignment="Stretch"
                                        VerticalScrollBarVisibility="Auto">
                                        <RichTextBlock
                                            x:Name="LogsTextBox"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            TextWrapping="Wrap" />
                                    </ScrollViewer>
                                </StackPanel>
                            </Expander>
                        </Grid>
                    </Grid>
                </ScrollViewer>

            </Grid>

            <StackPanel
                x:Name="NotificationStack"
                Grid.Row="0"
                Grid.Column="3"
                MaxWidth="600"
                Margin="10,0,10,10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Orientation="Vertical"
                Spacing="10">
                <!--<StackPanel.ChildrenTransitions>
                    <EntranceThemeTransition FromVerticalOffset="-50" />
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>-->
                <StackPanel.Transitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </StackPanel.Transitions>
            </StackPanel>

            <ScrollViewer
                x:Name="DownloadQueue"
                Grid.Row="0"
                Grid.Column="3"
                Grid.ColumnSpan="1"
                MaxWidth="600"
                Padding="0,0,10,0"
                Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto">
                <ScrollViewer.RenderTransform>
                    <TranslateTransform x:Name="QueueTranslate" X="{Binding ActualWidth, ElementName=DownloadQueue}" />
                </ScrollViewer.RenderTransform>

                <ItemsControl HorizontalAlignment="Stretch" ItemsSource="{Binding DownloadQueueViewModel.Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>

                            <ItemsStackPanel>

                                <ItemsStackPanel.ChildrenTransitions>
                                    <TransitionCollection>
                                        <EntranceThemeTransition FromVerticalOffset="-50" />
                                        <RepositionThemeTransition IsStaggeringEnabled="False" />
                                    </TransitionCollection>
                                </ItemsStackPanel.ChildrenTransitions>

                            </ItemsStackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:QueueItem">
                            <Grid
                                Margin="0,0,0,16"
                                Padding="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    FontSize="16"
                                    MaxLines="3"
                                    Text="{Binding Title}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap" />

                                <muxc:WrapPanel
                                    Grid.Row="1"
                                    HorizontalSpacing="8"
                                    Orientation="Horizontal"
                                    VerticalSpacing="4">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="{Binding Title}" />
                                        <Run Text="•" />
                                        <Run Text="{Binding Size}" />
                                    </TextBlock>

                                    <Border
                                        Padding="8,4"
                                        VerticalAlignment="Center"
                                        Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                                        CornerRadius="6">
                                        <TextBlock
                                            FontWeight="Bold"
                                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                            Text="{Binding Status}" />
                                    </Border>
                                </muxc:WrapPanel>


                                <StackPanel
                                    Grid.Row="2"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <Button>
                                        <FontIcon Glyph="&#xE70E;" />
                                    </Button>
                                    <Button>
                                        <FontIcon Glyph="&#xE70D;" />
                                    </Button>
                                    <Button>
                                        <FontIcon Foreground="Red" Glyph="&#xE74D;" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </ScrollViewer>

        </Grid>
    </Grid>
</Page>
