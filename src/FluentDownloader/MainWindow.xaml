<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="FluentDownloader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:FluentDownloader.Controls"
    xmlns:ctk="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fd="using:FluentDownloader"
    xmlns:local="using:FluentDownloader.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    x:Name="RootWindow"
    Title="Fluent Downloader"
    mc:Ignorable="d">

    <Grid x:Name="RootThemeElement" Background="{Binding WindowBackgroundBrush}">
        <Grid>

            <Frame x:Name="MainFrame" Padding="0,10,0,0" />

            <controls:ColorPickerControl x:Name="ColorPickerService" />
        </Grid>
    </Grid>

</Window>
