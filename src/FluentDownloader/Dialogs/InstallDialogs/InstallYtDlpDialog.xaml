<Page
    x:Class="FluentDownloader.Dialogs.InstallDialogs.InstallYtDlpDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Spacing="10">

        <TextBlock
            x:Uid="/Dialogs/InstallYtDlpDialogTitle"
            Style="{StaticResource TitleTextBlockStyle}"
            TextAlignment="Center" />

        <TextBlock
            Margin="0,10,0,0"
            FontSize="16"
            TextWrapping="Wrap">
            <Run x:Uid="/Dialogs/InstallYtDlpDescriptionPart1" />
            <Bold>
                <Run x:Uid="/Dialogs/InstallYtDlpDescriptionPart2" />
            </Bold>
            <Run x:Uid="/Dialogs/InstallYtDlpDescriptionPart3" /></TextBlock>

        <HyperlinkButton
            x:Uid="/Dialogs/YtDlpGithubReposNavigateUri"
            Margin="0,10,0,0"
            Style="{StaticResource Round16pxFontHyperLink}">
            <StackPanel Orientation="Horizontal">
                <SymbolIcon Margin="0,0,5,0" Symbol="Link" />
                <TextBlock x:Uid="/Dialogs/YtDlpGithubReposNavigateUriText" />
            </StackPanel>
        </HyperlinkButton>

        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <FontIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Glyph="&#xE946;" />
            <TextBlock
                x:Uid="/Dialogs/InstallYtDlpDialogCaption"
                VerticalAlignment="Center"
                Style="{StaticResource BodyTextBlockStyle}" />
        </StackPanel>
    </StackPanel>
</Page>
