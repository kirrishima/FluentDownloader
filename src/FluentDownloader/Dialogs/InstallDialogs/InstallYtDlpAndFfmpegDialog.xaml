<Page
    x:Class="FluentDownloader.Dialogs.InstallDialogs.InstallYtDlpAndFfmpegDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Spacing="10">

        <TextBlock
            x:Uid="/Dialogs/InstallYtDlpAndFfmpegDialogTitle"
            Style="{StaticResource TitleTextBlockStyle}"
            TextAlignment="Center" />

        <TextBlock
            Margin="0,10,0,0"
            FontSize="16"
            TextWrapping="Wrap">
            <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegDescriptionPart1" />
            <Bold>
                <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegDescriptionPart2" />
            </Bold>
            <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegDescriptionPart3" />
            <Bold>
                <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegDescriptionPart4" />
            </Bold>
            <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegDescriptionPart5" />
        </TextBlock>

        <StackPanel Margin="0,10,0,0" Spacing="5">
            <HyperlinkButton x:Uid="/Dialogs/YtDlpGithubReposNavigateUri" Style="{StaticResource Round16pxFontHyperLink}">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Margin="0,0,5,0" Symbol="Link" />
                    <TextBlock x:Uid="/Dialogs/YtDlpGithubReposNavigateUriText" />
                </StackPanel>
            </HyperlinkButton>

            <HyperlinkButton x:Uid="/Dialogs/FfmpegGithubReposNavigateUri" Style="{StaticResource Round16pxFontHyperLink}">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Margin="0,0,5,0" Symbol="Link" />
                    <TextBlock x:Uid="/Dialogs/FfmpegGithubReposNavigateUriText" />
                </StackPanel>
            </HyperlinkButton>
        </StackPanel>

        <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">
            <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegInstructionPart1" />
            <Bold>
                <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegInstructionPart2" />
            </Bold>
            <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegInstructionPart3" />
            <Bold>
                <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegInstructionPart4" />
            </Bold>
            <Run x:Uid="/Dialogs/InstallYtDlpAndFfmpegInstructionPart5" />
        </TextBlock>

        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <FontIcon
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Glyph="&#xE946;" />
            <TextBlock
                x:Uid="/Dialogs/InstallYtDlpAndFfmpegCaption"
                VerticalAlignment="Center"
                Style="{StaticResource BodyTextBlockStyle}" />
        </StackPanel>
    </StackPanel>
</Page>